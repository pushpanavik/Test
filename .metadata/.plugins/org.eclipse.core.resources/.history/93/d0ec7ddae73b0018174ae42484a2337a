		System.out.println("Enter the city");
		String city=util.inputString();
		System.out.println("Enter the zip");
		String zip=util.inputString();
		Address add=new Address();
		add.setCity(city);
		add.setState(state);
		add.setZip(zip);
		person.setAddress(add);
		
	}
	
